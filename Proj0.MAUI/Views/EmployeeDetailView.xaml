<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proj0.MAUI.Views.EmployeeDetailView"
             Title="EmployeeDetailView"
             NavigatedFrom="OnLeaving"
             NavigatedTo="OnArriving">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0"
            Text="Name" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="0" Text="{Binding Path=Model.Name}"/>
            <Label Grid.Row="1" Grid.Column="0"
            Text="Rate" VerticalOptions="Center"/>
            <Entry Grid.Column="1" Grid.Row="1" Text="{Binding Path=Model.Rate}"/>
        </Grid>
        <Button Text="OK" Clicked="OkClicked"/>
    </VerticalStackLayout>
</ContentPage>