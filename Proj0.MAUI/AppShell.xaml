<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proj0.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proj0.MAUI"
    xmlns:local2="clr-namespace:Proj0.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Project"
        ContentTemplate="{DataTemplate local2:ProjectView}"
        Route="Project"
        />
    <ShellContent
        Title="Course"
        ContentTemplate="{DataTemplate local2:ClientView}"
        Route="Client"
        />

</Shell>
